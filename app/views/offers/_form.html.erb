<%= form_with(model: [@product, @offer], local: true) do |form| %>
  <% if @offer.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :byers_required %>
    <%= form.number_field :buyers_required, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :amount_per_buyer %>
    <%= form.number_field :amount_per_buyer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :discount %>
    <%= form.number_field :discount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :expiration %>
    <%= form.datetime_select :expiration, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
